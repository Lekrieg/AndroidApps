<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<ImageView
		android:id="@+id/imageViewAnime"
		android:layout_width="124dp"
		android:layout_height="178dp"
		android:layout_marginStart="16dp"
		android:layout_marginTop="8dp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:srcCompat="@drawable/anime_angolmois" />

	<LinearLayout
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginTop="60dp"
		android:orientation="vertical"
		android:paddingLeft="8dp"
		android:paddingRight="8dp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@+id/imageViewAnime"
		app:layout_constraintTop_toTopOf="parent">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/textViewAnimeTitle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="5"
				android:text="TextView"
				android:textSize="14sp"
				android:textStyle="bold" />

			<TextView
				android:id="@+id/textViewAnimeYear"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="TextView"
				android:textAlignment="center"
				android:textSize="12sp" />
		</LinearLayout>

		<TextView
			android:id="@+id/textViewAnimeGenre"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="TextView"
			android:textSize="14sp" />

		<TextView
			android:id="@+id/textViewAnimeAuthor"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="TextView"
			android:textSize="14sp" />
	</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>